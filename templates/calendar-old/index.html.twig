{% extends 'base.html.twig' %}

{% block title %}Calendar index{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('gerersesconges') }}
{% endblock %}


{% block body %}
    <<html>

<head>
</head>

<body>
<div class="container-fluid ms-5">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <h1 class="text-center my-4">Liste de vos congés :</h1>

    <div class="tableau">
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Type de congés</th>
            <th>Début</th>
            <th>Fin</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for calendar in calendars %}
            <tr>
                <td>{{ calendar.id }}</td>
                <td>{{ calendar.title }}</td>
                <td>{{ calendar.start ? calendar.start|date('d-m-Y') : '' }}</td>
                <td>{{ calendar.end ? calendar.end|date('d-m-Y') : '' }}</td>
                <td>{{ calendar.description }}</td>
                <td>
                    <a href="{{ path('calendar_show', {'id': calendar.id}) }}" class="btn btn-secondary" role="button">
                        Détails
                    </a>

                    <a href="{{ path('calendar_edit', {'id': calendar.id}) }}" class="btn btn-secondary" role="button">
                        Modifier
                    </a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun résultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a href="{{ path('calendar_new') }}" class="btn btn-primary me-3 my-4" role="button">
        Nouveau congé
    </a>
</div>
</body>

    </html>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('gerersesconges') }}
{% endblock %}