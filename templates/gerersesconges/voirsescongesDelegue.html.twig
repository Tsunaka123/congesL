{% extends 'base.html.twig' %}

{% block title %}Voir ses congés{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('voirsescongesdelegue') }}
{% endblock %}


{% block body %}
    <html>

    <head>
    </head>

    <body>
    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-center" style="height: 150px">
            <h1 class="tittle">Vos nouvelles demande de congés :</h1>
        </div>

        <div class="d-flex align-items-center justify-content-center" style="height: 500px">
            <div class="table-responsive align-items-center justify-content-center" style="height: 500px">
                <table class="table table-striped">
                    <thead class="table-primary">
                    <tr>
                        <th>Type de congés</th>
                        <th>Début</th>
                        <th>Fin</th>
                        <th>Description</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for congesdemande in congesdemande %}
                        <tr>
                            <td class="align-middle">{{ congesdemande.typeDeConges }}</td>
                            <td class="align-middle">{{ congesdemande.dateDebut ? congesdemande.dateDebut|date('d-m-Y') : '' }}</td>
                            <td class="align-middle">{{ congesdemande.dateFin ? congesdemande.dateFin|date('d-m-Y') : '' }}</td>
                            <td class="align-middle">{{ congesdemande.informationsComplementaire }}</td>
                            <td class="align-middle">{{ congesdemande.statut }}</td>
                            <td class="align-middle">
                                <a href="{{ path('app_gerersesconges_detailsconges', {'id': congesdemande.id}) }}" class="btn btn-muted" role="button">
                                    Détails
                                </a>
                                <a href="{{ path('app_gerersesconges_modifierconges', {'id': congesdemande.id}) }}" class="btn btn-danger" role="button">
                                    Modifier
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10" class="align-middle">Aucune nouvelle demande</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>


        <div class="d-flex align-items-center justify-content-center" style="height: 150px">

            <a href="{{ path('app_gerersesconges_nouveauconges') }}" class="btn btn-primary" role="button">
                Nouvelle demande de congés
            </a>
        </div>

    </div>

    </body>

    </html>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('voirsescongesdelegue') }}
{% endblock %}